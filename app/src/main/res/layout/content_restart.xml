<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_restart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.connect.rh.presenter.common.restart.RestartActivity"
    tools:showIn="@layout/activity_restart">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/resrtart_header_text"
            android:layout_marginTop="@dimen/thirty_dp"
            android:text="Language Change Needs App Re-Start."
            android:textColor="@color/colorWarning"
            android:textSize="@dimen/seventeen_sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/resrtart_header_text"
            android:layout_marginTop="@dimen/five_dp"
            android:text="Cancel if you don't want to Re-Start the App"
            android:textColor="@color/colorWarning"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/restart_counter_layout"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_circle_counter"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/restart_counter_text"
                android:text="10"
                android:textSize="70sp"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <Button
            android:id="@+id/restart_cancel_button"
            android:layout_alignParentBottom="true"
            android:text="@string/cancel_text"
            android:textColor="@color/colorWhite"
            android:background="@color/colorWarning"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/thirty_dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
